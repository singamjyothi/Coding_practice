import java.util.Scanner;
class jaggedArray
{
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        System.out.println("Enter the number of rows for the jagged array:");
        int numRows = sc.nextInt();
        int[][] jaggedArray = new int[numRows][];
        
        for (int i = 0; i < numRows; i++) {
            System.out.println("Enter the number of columns for row " + i + ":");
            int numColumns = sc.nextInt();
            jaggedArray[i] = new int[numColumns];

          for (int j = 0; j < numColumns; j++) {
                System.out.print("Enter element at [" + i + "][" + j + "]: ");
                jaggedArray[i][j] = sc.nextInt();
            }
        }

        System.out.println("\nJagged Array Output:");
        for (int i = 0; i < jaggedArray.length; i++) {
            for (int j = 0; j < jaggedArray[i].length; j++) {
                System.out.print(jaggedArray[i][j] + " ");
            }
            System.out.println();
        }    
    }
}
